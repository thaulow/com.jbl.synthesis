      "values": [
        { "id": "play", "label": { "en": "Play" } },
        { "id": "pause", "label": { "en": "Pause" } },
        { "id": "stop", "label": { "en": "Stop" } },
        { "id": "skip_forward", "label": { "en": "Skip Forward" } },
        { "id": "skip_back", "label": { "en": "Skip Back" } },
        { "id": "fast_forward", "label": { "en": "Fast Forward" } },
        { "id": "rewind", "label": { "en": "Rewind" } }
      ]
    }
  ]
}
